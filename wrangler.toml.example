name = "spotify-playlist-sorter"
main = "index.js"
compatibility_date = "2024-09-23"

# KV Namespace — stores OAuth session tokens.
# Replace the id below with your own KV namespace ID.
# Create one with: npx wrangler kv namespace create SPOTIFY_TOKENS
[[kv_namespaces]]
binding = "SPOTIFY_TOKENS"
id = "<YOUR_KV_NAMESPACE_ID>"

# Secrets — set these via:
#   npx wrangler secret put SPOTIFY_CLIENT_ID
#   npx wrangler secret put SPOTIFY_CLIENT_SECRET
#   npx wrangler secret put SPOTIFY_REDIRECT_URI
